<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Admin Login | ToteTreasures Hub</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css?family=Italianno" rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">

  <style>
    body {
      background: linear-gradient(to right, rgb(241, 158, 158), rgb(255, 255, 255));
      font-family: Arial, sans-serif;
    }

    .card {
      border-radius: 1.5rem;
      border: 2px solid gold;
      background: linear-gradient(to right, rgb(221, 167, 243), rgb(231, 233, 103));
      box-shadow: 0px 0px 30px rgba(0, 0, 0, 0.7);
      max-width: 450px;
      margin: auto;
    }

    .form-label {
      font-weight: 500;
    }

    .admin-icon {
      font-size: 3rem;
      color: white;
      margin-bottom: 15px;
    }
  </style>
</head>

<body>
  <section class="vh-100 d-flex align-items-center">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
          <div class="card">
            <div class="card-body p-5 text-center">

              <!-- Admin Icon -->
              <i class="fas fa-user-shield admin-icon"></i>

              <!-- Title -->
              <h3 class="mb-4 text-white fw-bold">Admin Login</h3>

              <form action="/admin/login" method="post">
                <!-- Name -->
                <div class="mb-3 text-start">
                  <label for="typeName" class="form-label text-white">Name</label>
                  <input type="text" id="typeName" name="Name" class="form-control form-control-lg" autocomplete="name"
                    required>
                </div>

                <!-- Email -->
                <div class="mb-3 text-start">
                  <label for="typeEmailX-2" class="form-label text-white">Email</label>
                  <input type="email" id="typeEmailX-2" name="Email" class="form-control form-control-lg"
                    autocomplete="email" required>
                </div>

                <!-- Password -->
                <div class="mb-4 text-start">
                  <label for="typePasswordX-2" class="form-label text-white">Password</label>
                  <input type="password" id="typePasswordX-2" name="Password" class="form-control form-control-lg"
                    autocomplete="current-password" required>
                </div>

                <!-- Submit Button -->
                <button class="btn btn-primary btn-lg w-100" type="submit">Login</button>
              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>