<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Product Page</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href='https://fonts.googleapis.com/css?family=Italianno' rel='stylesheet'>
    <link rel="stylesheet" type="text/css" href="/css/admin/productpage.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <style>
        .highlight {
            background-color: yellow;
            font-weight: bold;
            color: black;
            padding: 0 2px;
            border-radius: 3px;
        }
    </style>
</head>

<body style="background-color: black;">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg main-nav">
        <div class="container-fluid d-flex align-items-center">
            <button class="btn btn-outline-light" type="button" data-bs-toggle="offcanvas"
                data-bs-target="#offcanvasMenu" aria-controls="offcanvasMenu">
                <i class="fa-solid fa-bars"></i>
            </button>
            <a class="navbar-brand d-flex align-items-center" href="#">
                <img src="/images/logo.png" alt="Bootstrap" style="height: 50px; width: auto;">
                <h1 class="header m-0 ms-2 fs-5 fs-lg-3 text-white">ToteTreasures Hub</h1>
            </a>
            <div class="collapse navbar-collapse d-flex justify-content-end">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="btn btn-danger " href="/admin/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Offcanvas menu -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasMenu" aria-labelledby="offcanvasMenuLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasMenuLabel">ADMIN OPTIONS</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body p-0">
            <ul class="list-group custom-list">
                <a href="/admin/dashboard" class="list-group-item custom-list-item"><i class="fas fa-house me-2"></i>
                    Dashboard</a>
                <a href="/admin/product" class="list-group-item custom-list-item"><i
                        class="fas fa-bag-shopping me-2"></i> Products</a>
                <a href="/admin/order" class="list-group-item custom-list-item"><i
                        class="fas fa-cart-shopping me-2"></i> Orders</a>
                <a href="/admin/userslist" class="list-group-item custom-list-item"><i class="fas fa-users me-2"></i>
                    Customers</a>
                <a href="/admin/coupons" class="list-group-item custom-list-item"><i class="fas fa-id-card me-2"></i>
                    Coupons</a>
                <a href="/admin/brandpage" class="list-group-item custom-list-item"><i
                        class="fas fa-user-plus me-2"></i> Brands</a>
                <a href="/admin/categorypage" class="list-group-item custom-list-item"><i class="fas fa-list me-2"></i>
                    Categories</a>
                <a href="/admin/offers" class="list-group-item custom-list-item"><i class="fas fa-money-bill me-2"></i>
                    Offers</a>
            </ul>
        </div>
    </div>

    <!-- Main container -->
    <div class="container-fluid mt-3">
        <% if (messages.success) { %>
            <div class="alert alert-success">
                <%= messages.success %>
            </div>
            <% } else if (messages.error) { %>
                <div class="alert alert-danger">
                    <%= messages.error %>
                </div>
                <% } %>

                    <!-- Search + Add Product -->
                    <div class="row g-2 mb-3 align-items-center">
                        <div class="col-12 col-md-6">
                            <form action="/admin/product" method="get" class="d-flex">
                                <input type="text" name="search" class="form-control me-2"
                                    placeholder="Search products..."
                                    value="<%= typeof search !== 'undefined' ? search : '' %>">
                                <button class="btn btn-outline-light" type="submit">Search</button>
                            </form>
                        </div>
                        <div class="col-12 col-md-6 text-md-end">
                            <a href="/admin/addProduct" class="btn btn-primary w-100 w-md-auto">ADD Product</a>
                        </div>
                    </div>

                    <!-- Product Table -->
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover mt-3">
                            <thead class="table-dark">
                                <tr>
                                    <th>Serial No</th>
                                    <th>Product Name</th>
                                    <th>Brand Name</th>
                                    <th>Category</th>
                                    <th>Image</th>
                                    <th>Price</th>
                                    <th>Discount Price</th>
                                    <th>Offer Price</th>
                                    <th>Available Quantity</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% function highlight(text, search) { if (!search || !text) return text; const regex=new
                                    RegExp(search, "gi" ); return text.replace(regex, match=> `<span
                                        class="highlight">${match}</span>`);
                                    } %>

                                    <% if (products.length> 0) { %>
                                        <% products.forEach((product, index)=> { %>
                                            <tr class="<%= product.Display === 'Inactive' ? 'table-dark' : '' %>">
                                                <td>
                                                    <%= index + 1 %>
                                                </td>
                                                <td>
                                                    <a href="/admin/viewproductdetails/<%= product._id %>"
                                                        class="text-secondary text-decoration-none">
                                                        <%- highlight(product.ProductName, search) %>
                                                    </a>
                                                </td>
                                                <td><%- highlight(product.BrandName.Name, search) %></td>
                                                <td><%- highlight(product.Category.Name, search) %></td>
                                                <td>
                                                    <img src="/uploads/<%= product.images[0] %>"
                                                        class="img-fluid rounded" style="max-width: 80px;"
                                                        alt="Product Image">
                                                </td>
                                                <td class="text-danger"><del>
                                                        <%= product.Price %>
                                                    </del></td>
                                                <td class="text-success">
                                                    <%= product.DiscountAmount %>
                                                </td>
                                                <td>
                                                    <%= product.IsInOffer ? (product.offerPrice || 'N/A' ) : 'N/A' %>
                                                </td>
                                                <td>
                                                    <%= product.AvailableQuantity %>
                                                </td>
                                                <td>
                                                    <% if (product.Display==='Active' ) { %>
                                                        <p class="text-success fw-bold">
                                                            <%= product.Display %>
                                                        </p>
                                                        <% } else { %>
                                                            <p class="text-danger fw-bold">
                                                                <%= product.Display %>
                                                            </p>
                                                            <% } %>
                                                </td>
                                                <td>
                                                    <% if (product.Display==='Active' ) { %>
                                                        <a href="/admin/product/<%= product._id %>">
                                                            <button
                                                                onclick="return confirm(`Are you sure to block <%= product.ProductName %>?`)"
                                                                class="btn btn-success">Block</button>
                                                        </a>
                                                        <% } else { %>
                                                            <a href="/admin/product/<%= product._id %>">
                                                                <button
                                                                    onclick="return confirm(`Are you sure to unblock <%= product.ProductName %>?`)"
                                                                    class="btn btn-danger">Unblock</button>
                                                            </a>
                                                            <% } %>
                                                </td>
                                            </tr>
                                            <% }); %>
                                                <% } else { %>
                                                    <!-- Show message row when no results -->
                                                    <tr>
                                                        <td colspan="11" class="text-center text-danger fw-bold">
                                                            No products found for your search.
                                                        </td>
                                                    </tr>
                                                    <% } %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <% if (products.length> 0) { %>
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-end flex-wrap">
                                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                    <a class="page-link"
                                        href="?page=<%= currentPage - 1 %>&search=<%= search %>">Previous</a>
                                </li>
                                <% for (let i=1; i <=totalPages; i++) { %>
                                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                        <a class="page-link" href="?page=<%= i %>&search=<%= search %>">
                                            <%= i %>
                                        </a>
                                    </li>
                                    <% } %>
                                        <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                            <a class="page-link"
                                                href="?page=<%= currentPage + 1 %>&search=<%= search %>">Next</a>
                                        </li>
                            </ul>
                        </nav>
                        <% } %>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>