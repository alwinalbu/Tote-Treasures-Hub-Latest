<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Coupon Management</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" rel="stylesheet">

  <!-- Custom Admin CSS -->
  <link rel="stylesheet" href="/css/admin/coupons.css">
</head>

<body>
  <!-- ✅ Navbar -->
  <nav class="navbar navbar-expand-lg main-nav">
    <div class="container-fluid d-flex align-items-center">
      <button class="btn btn-outline-light" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasMenu">
        <i class="fa-solid fa-bars"></i>
      </button>
      <a class="navbar-brand d-flex align-items-center" href="#">
        <img src="/images/logo.png" alt="Logo" style="height: 70px;">
        <h1 class="header m-0 ms-2">ToteTreasures Hub</h1>
      </a>
      <div class="ms-auto">
        <a class="btn btn-danger" href="/admin/logout">Logout</a>
      </div>
    </div>
  </nav>

  <!-- ✅ Offcanvas Sidebar -->
  <div class="offcanvas offcanvas-start" id="offcanvasMenu">
    <div class="offcanvas-header">
      <h5>ADMIN OPTIONS</h5>
      <button class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body p-0">
      <ul class="list-group custom-list">
        <a href="/admin/dashboard" class="list-group-item custom-list-item"><i class="fas fa-house me-2"></i>Dashboard</a>
        <a href="/admin/product" class="list-group-item custom-list-item"><i class="fas fa-bag-shopping me-2"></i>Products</a>
        <a href="/admin/order" class="list-group-item custom-list-item"><i class="fas fa-cart-shopping me-2"></i>Orders</a>
        <a href="/admin/userslist" class="list-group-item custom-list-item"><i class="fas fa-users me-2"></i>Customers</a>
        <a href="/admin/coupons" class="list-group-item custom-list-item active"><i class="fas fa-id-card me-2"></i>Coupons</a>
        <a href="/admin/brandpage" class="list-group-item custom-list-item"><i class="fas fa-user-plus me-2"></i>Brands</a>
        <a href="/admin/Categorypage" class="list-group-item custom-list-item"><i class="fas fa-list me-2"></i>Categories</a>
        <a href="/admin/offers" class="list-group-item custom-list-item"><i class="fas fa-money-bill me-2"></i>Offers</a>
      </ul>
    </div>
  </div>

  <!-- ✅ Add Coupon Modal -->
  <div class="modal fade" id="addCouponModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Add New Coupon</h4>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="addCouponForm">
            <div id="flashMessage" class="alert alert-danger d-none"></div>

            <label for="couponName">Coupon Name:</label>
            <input type="text" class="form-control mb-2" id="couponName" name="couponName" required>

            <label for="code">Coupon Code:</label>
            <input type="text" class="form-control mb-2" id="code" name="code" required>

            <label for="discountAmount">Discount Amount:</label>
            <input type="number" class="form-control mb-2" id="discountAmount" name="discount_amount" required>

            <label for="minimumPurchase">Minimum Purchase:</label>
            <input type="number" class="form-control mb-2" id="minimumPurchase" name="minimum_purchase" required>

            <label for="startDate">Start Date:</label>
            <input type="date" class="form-control mb-2" id="startDate" name="startDate" onkeydown="return false" required>

            <label for="expirationDate">Expiration Date:</label>
            <input type="date" class="form-control mb-3" id="expirationDate" name="expiration_date" onkeydown="return false" required>

            <button type="submit" class="btn btn-primary w-100">Add Coupon</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- ✅ Coupon Cards -->
  <div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="text-light">Coupons</h2>
      <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addCouponModal">
        <i class="fa-solid fa-plus me-1"></i> Add Coupon
      </button>
    </div>

    <% if (coupons.length > 0) { %>
      <div class="row" id="couponCards">
        <% coupons.forEach(coupon => { %>
          <div class="col-md-4 mt-3">
            <div class="card coupon-card shadow-sm">
              <div class="card-body">
                <h5 class="card-title fw-bold text-warning">Code: <%= coupon.code %></h5>
                <p class="card-text mb-1">Discount: ₹<%= coupon.discount_amount %></p>
                <p class="card-text mb-1">Minimum Purchase: ₹<%= coupon.minimum_purchase %></p>
                <p class="card-text mb-1">Start Date: <%= coupon.startDate.toISOString().split('T')[0] %></p>
                <p class="card-text mb-1">Expires: <%= coupon.expiration_date.toISOString().split('T')[0] %></p>

                <% if (coupon.Status === 'Active') { %>
                  <span class="badge bg-success">Active</span>
                <% } else if (coupon.Status === 'Inactive') { %>
                  <span class="badge bg-danger">Inactive</span>
                <% } else if (coupon.Status === 'Expired') { %>
                  <span class="badge bg-warning text-dark">Expired</span>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

      <!-- ✅ Pagination -->
      <div class="d-flex justify-content-center mt-4">
        <nav>
          <ul class="pagination">
            <% if (currentPage > 1) { %>
              <li class="page-item"><a class="page-link" href="?page=<%= currentPage - 1 %>">&laquo; Prev</a></li>
            <% } %>

            <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
              </li>
            <% } %>

            <% if (currentPage < totalPages) { %>
              <li class="page-item"><a class="page-link" href="?page=<%= currentPage + 1 %>">Next &raquo;</a></li>
            <% } %>
          </ul>
        </nav>
      </div>

    <% } else { %>
      <p class="text-light mt-4">No coupons available. Add a coupon now!</p>
    <% } %>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/js/coupon.js"></script>
</body>
</html>
