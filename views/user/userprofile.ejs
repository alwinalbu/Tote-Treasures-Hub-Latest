            <!-- 🌈 Modern Responsive Styling -->
            <style>
                body {
                    background: linear-gradient(135deg, #000000, #1a1a1a);
                    font-family: 'Poppins', sans-serif;
                    color: #fff;
                    overflow-x: hidden;
                }

                .modal-content {
                    background-color: #111 !important;
                    color: #fff;
                    border: 1px solid #fa8232;
                    border-radius: 12px;
                    box-shadow: 0 0 20px rgba(250, 130, 50, 0.3);
                }

                .modal-header {
                    border-bottom: 1px solid #fa8232;
                }

                .modal-title {
                    color: #fa8232;
                    font-weight: 600;
                }

                .form-label {
                    font-weight: 500;
                    color: #fa8232;
                }

                .form-control {
                    background-color: #1e1e1e;
                    border: 1px solid #fa8232;
                    color: #fff;
                    border-radius: 8px;
                    padding: 10px;
                }

                .form-control:focus {
                    background-color: #262626;
                    border-color: #fa8232;
                    box-shadow: 0 0 10px rgba(250, 130, 50, 0.4);
                    color: #fff;
                }

                .btn-primary,
                .btn-info {
                    background-color: #fa8232;
                    border: none;
                    color: #000;
                    font-weight: 600;
                    border-radius: 8px;
                    transition: 0.3s;
                }

                .btn-primary:hover,
                .btn-info:hover {
                    background-color: #ff9933;
                    transform: scale(1.03);
                }

                .btn-outline-secondary {
                    border-color: #fa8232;
                    color: #fa8232;
                }

                .btn-outline-secondary:hover {
                    background-color: #fa8232;
                    color: #000;
                }

                .profile-section {
                    background-color: #111;
                    border-radius: 12px;
                    padding: 30px;
                    box-shadow: 0 0 15px rgba(250, 130, 50, 0.2);
                    margin-bottom: 20px;
                }

                h3,
                h4 {
                    color: #fa8232;
                    font-weight: 600;
                }

                input[readonly] {
                    background-color: #1e1e1e !important;
                    color: #fff !important;
                    border: 1px solid #fa8232;
                }

                /* ✅ Responsive Layout */
                @media (max-width: 992px) {
                    .profile-section {
                        padding: 20px;
                    }
                }

                @media (max-width: 768px) {
                    h3 {
                        font-size: 1.5rem;
                    }

                    h4 {
                        font-size: 1.25rem;
                    }

                    .btn-info {
                        width: 100%;
                    }

                    .input-group {
                        flex-direction: column;
                    }

                    .input-group input {
                        margin-bottom: 10px;
                    }
                }

                @media (max-width: 576px) {
                    .profile-section {
                        padding: 15px;
                        box-shadow: 0 0 10px rgba(250, 130, 50, 0.15);
                    }

                    .form-control {
                        font-size: 0.9rem;
                        padding: 8px;
                    }

                    .btn {
                        font-size: 0.9rem;
                        padding: 8px;
                    }
                }
            </style>

            <!-- 🔐 Change Password Modal -->
            <div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content bg-dark text-white">
                        <div class="modal-header">
                            <h5 class="modal-title" id="changePasswordModalLabel">Change Password</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                        </div>

                        <div id="flashMessage" class="alert alert-danger" style="display: none;"></div>

                        <div class="modal-body">
                            <form id="passwordChangeForm" method="POST" action="/createNewPassword">
                                <div class="mb-3">
                                    <label for="currentPassword" class="form-label">Current Password</label>
                                    <input type="password" class="form-control" id="currentPassword"
                                        name="currentPassword" required>
                                </div>

                                <div class="mb-3">
                                    <label for="Password" class="form-label">New Password</label>
                                    <input type="password" class="form-control" id="Password" name="Password" required>
                                </div>

                                <div class="mb-3">
                                    <label for="confirmPassword" class="form-label">Confirm Password</label>
                                    <input type="password" class="form-control" id="confirmPassword"
                                        name="confirmPassword" required>
                                </div>

                                <button type="submit" class="btn btn-primary w-100">Save</button>

                                <% if (messages.success) { %>
                                    <div class="alert alert-success mt-2">
                                        <%= messages.success %>
                                    </div>
                                    <% } else if (messages.error) { %>
                                        <div class="alert alert-danger mt-2">
                                            <%= messages.error %>
                                        </div>
                                        <% } %>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 👤 User Profile Section -->
            <div class="container text-center mt-5">
                <div class="row">
                    <div class="col-lg-8 col-md-10 col-sm-12 mx-auto profile-section">
                        <h3>Welcome, <%= user.Username %>
                        </h3>

                        <div class="mt-4 text-start">
                            <div class="mb-3">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" id="name" class="form-control" value="<%= user.Username %>" readonly>
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" id="email" class="form-control" value="<%= user.Email %>" readonly>
                            </div>

                            <button id="changePasswordButton" class="btn btn-info w-100 mt-3">
                                <i class="fas fa-lock"></i> Change Password
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 💡 Referral Info -->
            <div class="container text-center mt-4 mb-5">
                <div class="col-lg-8 col-md-10 col-sm-12 mx-auto profile-section">
                    <h4>Referral Information</h4>
                    <p><strong>Referral Code:</strong>
                        <%= user.ReferralCode %>
                    </p>

                    <div class="input-group mb-3">
                        <input type="text" class="form-control" id="referralLink" value="<%= referralLink %>" readonly>
                        <button class="btn btn-outline-secondary" type="button"
                            onclick="copyToClipboard()">Copy</button>
                    </div>

                    <% if (user.ReferrerID && user.ReferrerID.Username) { %>
                        <p><strong>Referred By:</strong>
                            <%= user.ReferrerID.Username %>
                        </p>
                        <% } else { %>
                            <p>You haven't been referred by anyone yet.</p>
                            <% } %>
                </div>
            </div>

            <!-- ⚙️ JS -->
            <script>
                document.getElementById("passwordChangeForm").addEventListener("submit", function (e) {
                    const newPassword = document.getElementById("Password").value;
                    const confirmPassword = document.getElementById("confirmPassword").value;

                    if (newPassword !== confirmPassword) {
                        e.preventDefault();
                        const flash = document.getElementById("flashMessage");
                        flash.style.display = "block";
                        flash.innerText = "Passwords do not match!";
                    }
                });

                function copyToClipboard() {
                    const copyText = document.getElementById("referralLink");
                    copyText.select();
                    document.execCommand("copy");
                    alert("Copied referral link: " + copyText.value);
                }
            </script>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
            <script src="/js/userprofile.js"></script>
            <script>
                var myOffcanvas = new bootstrap.Offcanvas(document.getElementById('staticBackdrop'));
            </script>

