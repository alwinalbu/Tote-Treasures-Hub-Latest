<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Email Verification | ToteTreasures Hub</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <!-- Custom CSS -->
  <link rel="stylesheet" type="text/css" href="/css/emailVerification.css">
</head>

<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm fixed-top">
    <div class="container">
      <a class="navbar-brand d-flex align-items-center" href="/homepage">
        <img src="/images/logo.png" alt="logo" class="me-2" style="max-height: 50px;">
        <span class="fw-semibold text-uppercase text-warning">ToteTreasures Hub</span>
      </a>
    </div>
  </nav>

  <!-- Verification Section -->
  <section class="verification-section d-flex justify-content-center align-items-center">
    <div class="card verification-card shadow-lg border-0">
      <div class="card-body p-4 p-md-5">
        <% if (messages.success) { %>
          <div class="alert alert-success text-center">
            <%= messages.success %>
          </div>
          <% } else if (messages.error) { %>
            <div class="alert alert-danger text-center">
              <%= messages.error %>
            </div>
            <% } %>

              <h4 class="text-center text-light mb-3"><i
                  class="fa-solid fa-envelope-circle-check text-warning me-2"></i> Verify
                Your Email</h4>
              <p class="text-center text-secondary mb-4">
                Enter the OTP sent to your registered email address.
              </p>

              <form id="verifyForm" action="/emailVerification" method="POST">
                <div class="mb-3">
                  <input type="number" name="otp" id="number" class="form-control form-control-lg text-center"
                    placeholder="Enter OTP" required>
                </div>

                <button id="emailVerification" type="submit" class="btn btn-warning w-100 fw-semibold text-dark py-2">
                  Verify OTP
                </button>

                <div class="text-center mt-3 timer-container">
                  <p class="text-secondary mb-0">OTP will expire in:</p>
                  <p id="timer" class="text-light fw-semibold fs-5 mb-0">02:00</p>
                </div>

                <div id="resendOtp" class="text-center mt-3" style="display: none;">
                  <p class="text-secondary">Didnâ€™t receive the email?
                    <a href="/resendOtp" class="text-warning fw-semibold text-decoration-none">Resend OTP</a>
                  </p>
                </div>
              </form>
      </div>
    </div>
  </section>

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="/js/script.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>