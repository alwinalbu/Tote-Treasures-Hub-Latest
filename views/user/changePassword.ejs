<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Change Password | ToteTreasures Hub</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Custom Styling -->
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #000000, #1a1a1a);
            color: #fff;
        }

        .navbar {
            background-color: #000;
            border-bottom: 1px solid #fa8232;
        }

        .navbar-brand h3 {
            color: #fff;
            font-weight: 600;
            font-size: 1.25rem;
            margin: 0;
        }

        .container {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card {
            background-color: #111;
            border-radius: 15px;
            border: none;
            box-shadow: 0 0 20px rgba(250, 130, 50, 0.2);
            width: 100%;
            max-width: 420px;
            padding: 30px;
        }

        .card-title {
            color: #fa8232;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .form-control {
            background-color: #1e1e1e;
            border: 1px solid #fa8232;
            color: #fff;
            border-radius: 8px;
            padding: 10px;
        }

        .form-control::placeholder {
            color: #b5b5b5;
            opacity: 0.8;
        }

        .form-control:focus {
            background-color: #262626;
            border-color: #fa8232;
            box-shadow: 0 0 8px rgba(250, 130, 50, 0.4);
            outline: none;
        }

        .position-relative i {
            cursor: pointer;
            color: #fa8232;
        }

        .invalid-feedback {
            color: #ff4d4d;
            font-size: 0.85rem;
            margin-top: 5px;
        }

        .btn-warning {
            background-color: #fa8232 !important;
            border: none;
            color: #000;
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.3s;
        }

        .btn-warning:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .btn-warning:hover:not(:disabled) {
            background-color: #ff9933 !important;
            transform: scale(1.02);
        }
    
input.form-control,
#newPassword,
#confirmPassword {
  color: #ffffff !important;      
  background-color: #1e1e1e !important;  
  caret-color: #fa8232;           
}


input::placeholder {
  color: #b3b3b3 !important;
  opacity: 0.8;
}


input:focus {
  background-color: #262626 !important;
  border-color: #fa8232 !important;
  box-shadow: 0 0 8px rgba(250, 130, 50, 0.4) !important;
  color: #ffffff !important;
}

    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container-fluid d-flex justify-content-between align-items-center px-3">
            <a class="navbar-brand d-flex align-items-center" href="/homepage">
                <img src="/images/logo.png" alt="logo" style="max-height: 55px;" class="me-2">
                <h3>ToteTreasures Hub</h3>
            </a>
        </div>
    </nav>

    <!-- Password Reset Section -->
    <div class="container">
        <div class="card">
            <form class="formforgot" action="/createNewPassword" method="post">
                <% if (messages.success) { %>
                    <div class="alert alert-success text-center">
                        <%= messages.success %>
                    </div>
                    <% } else if (messages.error) { %>
                        <div class="alert alert-danger text-center">
                            <%= messages.error %>
                        </div>
                        <% } %>

                            <h4 class="card-title text-center mb-3"><i class="fa-solid fa-lock me-2"></i>Reset Your
                                Password</h4>
                            <p class="text-secondary text-center mb-4">Enter and confirm your new password</p>

                            <!-- New Password -->
                            <div class="form-group mb-3 position-relative">
                                <input type="password" class="form-control" id="newPassword" name="Password"
                                    placeholder="New Password" required />
                                <i class="fa-solid fa-eye position-absolute top-50 end-0 translate-middle-y me-3"
                                    id="toggleNewPassword"></i>
                                <div id="passwordError" class="invalid-feedback"></div>
                            </div>

                            <!-- Confirm Password -->
                            <div class="form-group mb-3 position-relative">
                                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"
                                    placeholder="Confirm Password" required />
                                <i class="fa-solid fa-eye position-absolute top-50 end-0 translate-middle-y me-3"
                                    id="toggleConfirmPassword"></i>
                                <div id="confirmError" class="invalid-feedback"></div>
                            </div>

                            <!-- Submit Button -->
                            <button id="resetBtn" type="submit" class="btn btn-warning w-100 btn-lg" disabled>Reset
                                Password</button>
            </form>
        </div>
    </div>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const newPassword = document.getElementById("newPassword");
        const confirmPassword = document.getElementById("confirmPassword");
        const resetBtn = document.getElementById("resetBtn");
        const passwordError = document.getElementById("passwordError");
        const confirmError = document.getElementById("confirmError");

        // Password regex: must contain uppercase, lowercase, number, special char, min 8 chars
        const strongRegex = /^(?=.*[A-Z])(?=.*[a-z])(?=.*\d)(?=.*[@$!%*?&#]).{8,}$/;

        function validateForm() {
            const pass = newPassword.value.trim();
            const confirm = confirmPassword.value.trim();

            let valid = true;

            // Password strength validation
            if (!strongRegex.test(pass)) {
                passwordError.textContent =
                    "Password must be at least 8 characters and include uppercase, lowercase, number, and special character.";
                valid = false;
            } else {
                passwordError.textContent = "";
            }

            // Confirm password validation
            if (confirm && pass !== confirm) {
                confirmError.textContent = "Passwords do not match.";
                valid = false;
            } else {
                confirmError.textContent = "";
            }

            // Enable or disable submit
            resetBtn.disabled = !valid;
        }

        newPassword.addEventListener("input", validateForm);
        confirmPassword.addEventListener("input", validateForm);

        // Toggle visibility
        document.getElementById("toggleNewPassword").addEventListener("click", function () {
            const type = newPassword.getAttribute("type") === "password" ? "text" : "password";
            newPassword.setAttribute("type", type);
            this.classList.toggle("fa-eye-slash");
        });

        document.getElementById("toggleConfirmPassword").addEventListener("click", function () {
            const type = confirmPassword.getAttribute("type") === "password" ? "text" : "password";
            confirmPassword.setAttribute("type", type);
            this.classList.toggle("fa-eye-slash");
        });
    </script>
</body>

</html>