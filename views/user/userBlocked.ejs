      border: 1px solid rgba(250,130,50,0.3);
    }

    .contact-info i {
      color: #fa8232;
      margin-right: 5px;
    }

    .contact-info a {
      color: #fa8232;
      text-decoration: none;
      font-weight: 500;
    }

    .contact-info a:hover {
      text-decoration: underline;
    }

    footer {
      position: fixed;
      bottom: 10px;
      font-size: 0.9rem;
      color: #888;
    }

    footer a {
      color: #fa8232;
      text-decoration: none;
    }

    footer a:hover {
      text-decoration: underline;
    }
  </style>
</head>

