<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Forgot Password | ToteTreasures Hub</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <!-- Custom CSS -->
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #000000, #1a1a1a);
      color: #fff;
    }

    .navbar {
      background-color: #000;
      padding: 0.6rem 1rem;
      border-bottom: 1px solid #fa8232;
    }

    .navbar-brand h3 {
      font-size: 1.25rem;
      font-weight: 600;
      color: #fff;
      display: inline-block;
      margin: 0;
    }

    .card {
      background-color: #111;
      color: #fff;
      border-radius: 15px;
      border: none;
      box-shadow: 0 0 15px rgba(250, 130, 50, 0.2);
      transition: transform 0.3s ease;
    }

    .card:hover {
      transform: translateY(-3px);
    }

    .card-title {
      color: #fa8232;
      font-weight: 600;
    }

    label {
      font-weight: 500;
      color: #ddd;
    }

    input.form-control {
      background-color: #1e1e1e;
      border: 1px solid #fa8232;
      border-radius: 8px;
      color: #fff;
      font-size: 1rem;
      padding: 10px;
    }

    input.form-control:focus {
      border-color: #fa8232;
      box-shadow: 0 0 10px rgba(250, 130, 50, 0.5);
      background-color: #262626;
    }

    .btn-warning {
      background-color: #fa8232 !important;
      color: #000;
      border-radius: 8px;
      font-weight: 600;
      border: none;
      transition: all 0.3s ease;
    }

    .btn-warning:hover {
      background-color: #ff9933 !important;
      transform: scale(1.02);
    }

    .invalid-feedback {
      color: #ff6666;
      font-size: 0.9rem;
      text-align: left;
      display: none;
    }

    .is-invalid+.invalid-feedback {
      display: block;
    }
    /* Make email input text clearly visible */
input.form-control,
#email {
  background-color: #1e1e1e;   /* Dark background */
  color: #ffffff;              /* White text when typing */
  caret-color: #fa8232;        /* Orange blinking cursor */
}

/* Make placeholder text visible but slightly lighter */
#email::placeholder {
  color: #b3b3b3;              /* Light gray placeholder */
  opacity: 0.8;
}

/* On focus: keep background and show orange glow */
#email:focus {
  background-color: #262626;
  border-color: #fa8232;
  color: #ffffff;
  box-shadow: 0 0 8px rgba(250, 130, 50, 0.5);
  outline: none;
}


    @media (max-width: 576px) {
      .card {
        width: 100%;
        margin: 1rem;
      }

      .card-body {
        padding: 1.5rem !important;
      }
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
    <div class="container-fluid d-flex justify-content-between align-items-center">
      <a class="navbar-brand d-flex align-items-center" href="/homepage">
        <img src="/images/logo.png" alt="logo" style="max-height: 60px;" class="me-2">
        <h3>ToteTreasures Hub</h3>
      </a>
    </div>
  </nav>

  <!-- Forgot Password Section -->
  <section class="vh-100 d-flex justify-content-center align-items-center">
    <div class="container d-flex justify-content-center mt-5">
      <div class="card shadow p-4" style="max-width: 28rem;">
        <form class="formforgot needs-validation" action="/forgotpassword" method="POST" novalidate>
          <% if (messages.success) { %>
            <div class="alert alert-success text-center">
              <%= messages.success %>
            </div>
            <% } else if (messages.error) { %>
              <div class="alert alert-danger text-center">
                <%= messages.error %>
              </div>
              <% } %>

                <div class="card-body">
                  <h2 class="card-title text-center mb-3">Forgot Password</h2>
                  <p class="text-secondary text-center mb-4" style="font-size: 0.9rem;">
                    Enter the email address associated with your ToteTreasures account
                  </p>

                  <div class="mb-3">
                    <label for="email" class="form-label">Email Address</label>
                    <input name="Email" type="email" class="form-control" id="email" placeholder="Enter your Email"
                      required pattern="[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,}$"
                      title="Please enter a valid email address (e.g., name@example.com)">
                    <div class="invalid-feedback">Please enter a valid email address.</div>
                  </div>

                  <button id="forgotpassword" type="submit" class="btn btn-warning w-100 btn-lg mt-3">
                    Send OTP
                  </button>
                </div>
        </form>
      </div>
    </div>
  </section>

  <!-- Bootstrap Script -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Custom Validation Script -->
  <script>
    // Client-side Bootstrap validation
    (() => {
      const forms = document.querySelectorAll('.needs-validation');
      Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    })();

    // Live email validation (adds red border dynamically)
    const emailInput = document.getElementById('email');
    emailInput.addEventListener('input', () => {
      const regex = /^[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,}$/;
      if (regex.test(emailInput.value)) {
        emailInput.classList.remove('is-invalid');
      } else {
        emailInput.classList.add('is-invalid');
      }
    });
  </script>
</body>

</html>