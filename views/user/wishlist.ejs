<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Wishlist | ToteTreasures Hub</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/toastr@2.1.4/dist/toastr.min.css"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css"
    />
    <link rel="stylesheet" href="/css/wishlist.css" />
  </head>

  <body>
   
    <%- include('../partials/usercanvas') %>
    <%- include('../partials/usernava')
    %>

    <!-- Wishlist Section -->
    <section class="wishlist-section py-5">
      <div class="container">
        <% if (messages.success) { %>
        <div class="alert alert-success text-center">
          <%= messages.success %>
        </div>
        <% } else if (messages.error) { %>
        <div class="alert alert-danger text-center"><%= messages.error %></div>
        <% } %> <% if (wishlist.length===0) { %>
        <div class="text-center mt-5">
          <h4 class="text-warning fw-bold">Your wishlist is empty ðŸ˜•</h4>
          <a href="/shop" class="btn btn-warning mt-3">Go to Shop</a>
        </div>
        <% } else { %>
        <div class="table-responsive mt-4">
          <table
            class="table table-dark table-hover align-middle text-center wishlist-table"
          >
            <thead class="table-warning text-dark">
              <tr>
                <th scope="col">Image</th>
                <th scope="col">Product Name</th>
                <th scope="col">Price</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% let total=0; %> <% wishlist.forEach(item=> { %>
              <tr>
                <td>
                  <% if (item.productId?.images?.length> 0) { %>
                  <img
                    src="/uploads/<%= item.productId.images[0] %>"
                    alt="<%= item.productId.ProductName %>"
                    class="wishlist-img"
                  />
                  <% } %>
                </td>
                <td><%= item.productId.ProductName %></td>
                <td>â‚¹<%= item.productId.DiscountAmount %></td>
                <td>
                  <div class="d-flex justify-content-center gap-2">
                    <a
                      href="/add-to-cart/<%= item.productId._id %>?from=wishlist"
                      class="btn btn-outline-success btn-sm add-to-cart-button"
                    >
                      <i class="fa-solid fa-cart-plus me-1"></i>Add to Cart
                    </a>
                    <a
                      href="/removefromWishlist/<%= item.productId._id %>"
                      class="btn btn-outline-danger btn-sm remove-button"
                    >
                      <i class="fa-solid fa-trash me-1"></i>Remove
                    </a>
                  </div>
                </td>
              </tr>
              <% total +=item.productId.DiscountAmount; %> <% }) %>
              <tr class="fw-bold text-warning border-top">
                <td colspan="2" class="text-end">Total:</td>
                <td colspan="2">â‚¹<%= total.toLocaleString('en-IN') %></td>
              </tr>
            </tbody>
          </table>
        </div>
        <% } %>
      </div>
    </section>

    <!-- âœ… Footer -->
    <%- include('../layouts/footer') %> <%- include('../layouts/userfooter') %>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/toastify-js"
    ></script>
    <script src="/js/wishlist.js"></script>
    <script src="/js/addtocart.js"></script>

    <!-- âœ… Sticky Navbar Scroll Script -->
    <script>
      document.addEventListener("scroll", () => {
        const navbar = document.getElementById("mainNavbar");
        const logo = document.getElementById("navLogo");
        if (navbar && logo) {
          if (window.scrollY > 40) {
            navbar.classList.add("navbar-shrink");
            logo.style.height = "35px";
          } else {
            navbar.classList.remove("navbar-shrink");
            logo.style.height = "45px";
          }
        }
      });
    </script>
  </body>
</html>
